[advice]
	detachedHead = false

[alias]
	uncommit = reset --soft HEAD^
	unstage = reset HEAD

[apply]
	whitespace = fix

[color]
	ui = auto

[core]
	excludesfile = ~/.gitignore
	attributesfile = ~/.gitattributes

[diff "exif"]
	textconv = exiftool

[diff]
	algorithm = patience
	colorMoved = default
	mnemonicprefix = true
	renames = copies

[difftool]
	prompt = false

[fetch]
	fsckObjects = true
	prune = true

[format]
	pretty = fuller

[init]
	templatedir = ~/.gittemplate

[interactive]
	singleKey = true

[log]
	decorate = auto
	follow = true
	showSignature = true

[mergetool]
	keepBackup = false
	prompt = false

[push]
	default = current

[rebase]
	autosquash = true

[receive]
	fsckObjects = true

[transfer]
	fsckObjects = true

[user]
	name = Victor Koronen
	email = git@victorkoronen.se

[web]
	browser = xdg-open

[include]
	path = ~/.gitconfig.local
