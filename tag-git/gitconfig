[advice]
	detachedHead = false

[alias]
	uncommit = reset --soft HEAD^
	unstage = reset HEAD

[apply]
	whitespace = fix

[color]
	ui = auto

[core]
	excludesFile = ~/.gitignore
	attributesFile = ~/.gitattributes

[diff "exif"]
	textconv = exiftool

[diff]
	algorithm = patience
	colorMoved = default
	mnemonicPrefix = true
	renames = copies

[difftool]
	prompt = false

[fetch]
	fsckObjects = true
	prune = true

[format]
	pretty = fuller

[init]
	defaultBranch = main
	templateDir = ~/.gittemplate

[interactive]
	singleKey = true

[log]
	date = auto:human
	decorate = auto
	follow = true
	showSignature = true

[mergetool]
	keepBackup = false
	prompt = false

[pull]
	ff = only

[push]
	default = current

[rebase]
	autoSquash = true
	stat = true

[receive]
	fsckObjects = true

[transfer]
	fsckObjects = true

[user]
	name = Victor Koronen
	email = git@victorkoronen.se

[web]
	browser = xdg-open

[include]
	path = ~/.gitconfig.local
