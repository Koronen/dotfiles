[alias]
	uncommit = reset --soft HEAD^
	unstage = reset HEAD

[apply]
	whitespace = fix

[color]
	ui = auto

[core]
	excludesfile = ~/.gitignore
	attributesfile = ~/.gitattributes

[diff "exif"]
	textconv = exiftool

[diff]
	algorithm = patience
	mnemonicprefix = true
	renames = copies

[difftool]
	prompt = false

[fetch]
	fsckObjects = true
	prune = true

[hub]
	protocol = https

[include]
	path = ~/.gitconfig.local

[init]
	templatedir = ~/.gittemplate

[log]
	mailmap = true

[mergetool]
	keepBackup = false
	prompt = false

[push]
	default = current

[rebase]
	autosquash = true

[receive]
	fsckObjects = true

[transfer]
	fsckObjects = true

