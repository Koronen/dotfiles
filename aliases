#!/usr/bin/env sh

alias ..='cd ..'
alias df='df -h'
alias pag='ps aux | head -n1; ps aux | grep -i'
alias path="echo \$PATH | tr -s ':' '\n'"
if command -v xdg-open > /dev/null 2>&1; then
    alias open='xdg-open'
fi
alias trm='rm -f **/*~'

for aliasfile in $HOME/.aliases.d/*.sh; do
    . "$aliasfile"
done

if [ -f "$HOME/.aliases.local" ]; then
    . "$HOME/.aliases.local"
fi
