[advice]
	addEmptyPathspec = false
	addIgnoredFile = false
	detachedHead = false
	diverging = false
	skippedCherryPicks = false

[alias]
	uncommit = reset --soft HEAD^
	unstage = reset HEAD

[apply]
	whitespace = fix

[branch]
	sort = -committerdate

[color]
	ui = auto

[column]
	ui = auto

[diff "exif"]
	textconv = exiftool

[diff "gpg"]
	textconv = gpg --decrypt
	cachetextconv = false

[diff "sops"]
	textconv = sops --decrypt
	cachetextconv = false

[diff]
	algorithm = histogram
	colorMoved = default
	mnemonicPrefix = true
	renames = copies

[difftool]
	prompt = false

[fetch]
	fsckObjects = true
	prune = true
	pruneTags = true

[format]
	pretty = fuller

[gpg]
	format = ssh

[gpg "ssh"]
	allowedSignersFile = ~/.config/git/allowed_signers

[grep]
	lineNumber = true

[help]
	autoCorrect = prompt

[init]
	defaultBranch = main

[interactive]
	singleKey = true

[log]
	date = auto:human
	decorate = auto
	follow = true
	showSignature = true

[merge]
	conflictStyle = zdiff3

[mergetool]
	keepBackup = false
	prompt = false

[pull]
	ff = only

[push]
	autoSetupRemote = true
	followTags = true

[rebase]
	autoSquash = true
	stat = true
	updateRefs = true

[receive]
	fsckObjects = true

[rerere]
	autoUpdate = true
	enabled = true

[revert]
	reference = true

[tag]
	sort = version:refname

[transfer]
	fsckObjects = true

